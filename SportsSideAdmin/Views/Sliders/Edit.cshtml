@model SportsSide.DAL.SLIDER

@{
    ViewBag.Title = "Edit";
}

<div id="overlay"></div>
<div id="frame">
    <img id="main" src="" alt="" />
</div>

<h2>Slider Bilgilerini Düzenle</h2>

@using (Html.BeginForm("Edit", "Sliders", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.SLIDER_ID);
    @Html.HiddenFor(model => model.SLIDER_PICTURE);
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @if (TempData["Hata"] != null)
        {
            <div class="alert alert-danger">
                <strong>Hay aksi!</strong> @TempData["Hata"].ToString()
            </div>
        }

        <div class="form-group">
            @Html.Label("Slider Açıklaması :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SLIDER_DESCRIPTION, new { htmlAttributes = new { @class = "form-control", placeholder = "Slider açıklaması giriniz" } })
                @Html.ValidationMessageFor(model => model.SLIDER_DESCRIPTION, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Slider Fotoğrafı :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <img id="smallFtImage" src="@Model.SLIDER_PICTURE" alt="" style="margin-bottom:5px;"/>
                <input type="file" name="file" value="Gözat" class="btn btn-warning" id="imgUpload" />
                @*@Html.EditorFor(model => model.FT_NAME, new { htmlAttributes = new { @class = "form-control", placeholder = "Tesis türü adı giriniz" } })
                    @Html.ValidationMessageFor(model => model.FT_NAME, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success"/>
                <input type="button" value="Vazgeç" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Sliders")'" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/slider.js"></script>
<link href="~/css/style.css" rel="stylesheet" />