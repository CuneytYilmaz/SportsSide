@model SportsSide.DAL.FACILITY

@{
    ViewBag.Title = "Delete";
}

<h3>Seçili tesisi silmek istediğinize emin misiniz?</h3>
<div>
    <hr />

    @using (Html.BeginForm(Html.BeginForm("Delete", "Facilities", FormMethod.Post, new { @class = "form-horizontal", role = "form" })))
    {
        @Html.HiddenFor(model => model.FACILITY_ID);
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @if (TempData["Hata"] != null)
            {
                <div class="alert alert-danger">
                    <strong>Hay aksi!</strong> @TempData["Hata"].ToString()
                </div>
            }
            <div class="form-group">
                @Html.Label("Tesis Adı :", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 control-label" style="text-align:left;">
                    @Html.DisplayFor(model => model.FACILITY_NAME)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Tesis Sahibi :", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 control-label" style="text-align:left;">
                    @Html.DisplayFor(model => model.USERS.USER_NAME) @Html.DisplayFor(model => model.USERS.USER_SURNAME)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Tesis Türü :", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 control-label" style="text-align:left;">
                    @Html.DisplayFor(model => model.FACILITY_TYPE1.FT_NAME)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Tesis Kapasitesi :", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 control-label" style="text-align:left;">
                    @Html.DisplayFor(model => model.FACILITY_CAPACITY)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Tesis Fiyatı :", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 control-label" style="text-align:left;">
                    @Html.DisplayFor(model => model.FACILITY_PRICE)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Tesis Açıklaması :", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 control-label" style="text-align:left;">
                    @Html.DisplayFor(model => model.FACILITY_CONTENT)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Tesis Adresi :", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 control-label" style="text-align:left;">
                    @Html.DisplayFor(model => model.FACILITY_ADDRESS)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("İlçe :", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 control-label" style="text-align:left;">
                    @Html.DisplayFor(model => model.DISTRICT.DISTRICT_NAME)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("İl :", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 control-label" style="text-align:left;">
                    @Html.DisplayFor(model => model.DISTRICT.CITY.CITY_NAME)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Bölge :", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 control-label" style="text-align:left;">
                    @Html.DisplayFor(model => model.DISTRICT.CITY.AREA.AREA_NAME)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Sil" class="btn btn-danger" />
                    <input type="button" value="Vazgeç" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Facilities")'" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Geri Dön", "Index")
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/layout.js"></script>
<link rel="stylesheet" type="text/css" href="~/css/style.css" />
